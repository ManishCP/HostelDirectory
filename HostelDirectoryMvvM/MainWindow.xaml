<Window x:Class="HostelDirectoryMvvM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HostelDirectoryMvvM"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450" 
        Width="1000" xmlns:vw="clr-namespace:HostelDirectoryMvvM.Views">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="250" Width="390*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition MinWidth="250" Width="300*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>

        <vw:StudentsListView Grid.Column="0" 
                             Grid.ColumnSpan="2" 
                             Margin="0,0,4,0"
                             HorizontalAlignment="Right"/>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
        <vw:StudentEditorView Grid.Column="1" 
                              Grid.ColumnSpan="2"
                              HorizontalAlignment="Left"
                              Margin="4,0,0,0" Loaded="StudentEditorView_Loaded" Width="424"/>
    </Grid>
</Window>
